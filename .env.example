# VIGIL Configuration Template
# Copy this file to .env and fill in your API keys

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/vigil_db

# API Keys - Competitor Identification
CRUNCHBASE_API_KEY=your_crunchbase_api_key_here
LINKEDIN_API_KEY=your_linkedin_api_key_here

# API Keys - Financial Data
PAPPERS_API_KEY=your_pappers_api_key_here
FINANCIAL_MODELING_PREP_API_KEY=your_fmp_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# API Keys - Marketing & SEO
SIMILARWEB_API_KEY=your_similarweb_api_key_here
SEMRUSH_API_KEY=your_semrush_api_key_here
AHREFS_API_KEY=your_ahrefs_api_key_here

# Scraping Configuration
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPING_DELAY=2.0
MAX_RETRIES=3

# Cache Configuration
CACHE_TTL_DAYS=90
ENABLE_CACHE=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=vigil.log

# Zero Hallucination - Confidence Thresholds
MIN_CONFIDENCE_THRESHOLD=0.70
MIN_DATA_SOURCES=2

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=30
SCRAPING_RATE_LIMIT_PER_MINUTE=10
